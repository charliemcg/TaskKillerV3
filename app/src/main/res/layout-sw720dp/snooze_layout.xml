<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.violenthoboenterprises.taskkiller.MainActivity"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/oneHour"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/oneHourBtnText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="@string/oneHour"
                android:textColor="@color/gray"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourHours"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/fourHoursBtnText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="@string/fourHours"
                android:textColor="@color/gray"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tomorrow"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/tomorrowBtnText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="center"
                android:text="@string/tomorrow"
                android:textColor="@color/gray"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</TableRow>
