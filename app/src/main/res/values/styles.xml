<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#333333</item>
    </style>

    <style name="ColorPickerThemeDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ColorPickerThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.DarkTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/mid_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="ThemeOverlay.LightTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#EEEEEE</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="date_picker_theme" parent="@android:style/Widget.DatePicker" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
